{
	"name": "pipe-fun",
	"version": "1.0.0",
	"description": "Build and compose pipelines with ease",
	"license": "BSD-3-Clause",
	"repository": "diogoazevedos/pipe-fun",
	"author": {
		"name": "Diogo Azevedo",
		"email": "diogoazevedos@gmail.com"
	},
	"type": "module",
	"exports": {
		"types": "./distribution/main.d.ts",
		"default": "./distribution/main.js"
	},
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"prepare": "husky",
		"build": "tsc",
		"prepublishOnly": "npm run build",
		"test": "xo && tsc --noEmit && c8 ava"
	},
	"files": [
		"distribution/main.js",
		"distribution/main.d.ts"
	],
	"keywords": [
		"pipeline",
		"pipe",
		"async",
		"promise",
		"parallel",
		"utilities",
		"typescript"
	],
	"devDependencies": {
		"@commitlint/cli": "^20.0.0",
		"@commitlint/config-conventional": "^20.0.0",
		"@sindresorhus/tsconfig": "^8.0.1",
		"@types/node": "^24.5.2",
		"ava": "^6.4.1",
		"c8": "^10.1.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.1",
		"tsx": "^4.20.6",
		"typescript": "^5.9.2",
		"xo": "^1.2.2"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.ts": "xo --fix"
	},
	"ava": {
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--import=tsx/esm"
		],
		"workerThreads": false
	},
	"c8": {
		"reporter": [
			"text",
			"html",
			"lcov"
		],
		"extension": [
			".ts"
		]
	}
}
